Manager:

#Screenmanager and the defined Screens so far:

<Manager>:
    LogInScreen:
        name: "LogInScreen"
    ChatScreen:
        name: "ChatScreen"

<LogInScreen>:
    GridLayout:
        id: basegrid
        rows: 2
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: r"Ressources\blue-background.jpg"
        BoxLayout:
            id: textfields
            orientation: "vertical"
            
            Label:
                id: oben
                text: "Hier Username eintragen"
                valign: "bottom"
                
            UserText:
                id: user_text
                
            Label:
                id: mitte
                text: "Hier Passwort angeben"
                valign: "bottom"
                
            UserPW:
                id: user_pw
                
            Label:
                id: unten
    
        Button:
            id: sendlogin
            size_hint: None, None
            size: dp(150), dp(50)
            text: "Send"
            on_press: root.validate_login(self)

<ChatScreen>:
    name: "ChatScreen"
    BoxLayout:
        orientation: "horizontal"
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: r"Ressources\blue-background.jpg"
        canvas:
            Color:
                rgba: 0, 0, 0, .6
            Line:
                points: (self.width/4*3, 0, self.width/4*3, self.height)
                width: 2
            Line:
                points: (0, self.height/4, self.width, self.height/4)
                width: 2
        
        LeftColumn:
            id: left_column
            
        RightColumn:
            id: right_column

# Elements for the ChatScreen: 
# Left and Right Column, ScrollChat for Chatdisplaylabel
# Design musst still be updated/done better

<ScrollChat@ScrollView>:
    Label:
        id: left_label
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width, None #none for scrolling!
        text: "probieren wir weiter"
        halign: "left"
        valign: "top"
        padding: 5, 5, 5, 5
        
<LeftColumn>:
    orientation: "vertical"
    size_hint: 1.5 , 1
    padding: 0, 5, 0, 0
    ScrollChat:
        id:ScrollChat
        size_hint: 1, .75
    TextInput:
        id: chat_input
        size_hint: 1, .25
        hint_text: "Hier Nachricht eingeben"
        text_validate_unfocus: False        
        multiline: False
        on_text_validate: root.parent.parent.ids.right_column.testChat()

<RightColumn>:
    orientation: "vertical"
    size_hint: .5 , 1
    Label:
        id: right_label
        text: "Label f√ºr Info etc."
        size_hint: 1, .85
    Button:
        id: send_button
        text: "Senden Button"
        on_press: root.testChat()
        size_hint: 1, .10

# Elements for LoginScreen:
# Design musst still be updated/done better

<UserText@BoxLayout>:
    BoxLayout:
        orientation: "horizontal"
        Label:
            id: left-padding
            size_hint: .3, None
        TextInput:
            id: username
            multiline: False
            hint_text: "Username"
            size_hint: 1, None
            height: self.minimum_height
            padding: 10,10,10,10
        Label:
            id: right-padding
            size_hint: .3, None


<UserPW@BoxLayout>:
    BoxLayout:
        orientation: "horizontal"
        Label:
            id: pw-padding
            size_hint: .3, 1
        TextInput:
            id: passwort
            multiline: False
            hint_text: "Passwort"
            size_hint: 1, None
            height: self.minimum_height
            padding: 10,10,10,10
        Label:
            id: pw-padding
            size_hint: .3, 1